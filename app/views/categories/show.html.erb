<%= render  "pages/navigation" %>
<section id="abouts" class="abouts sections">
  <div class="container">
    <div class="row">
      <div class="main_abouts">
        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_abouts wow slideInLeft" data-wow-duration="2s">
            <div class="head_title text-center">

              <p>
                <strong>Title:</strong>
                <%= @category.name %>
              </p>

              <div class="separetor"></div>
            </div>
           <p>
              <strong>Description:</strong>
              <%= @category.description %>
           </p>

          </div>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_abouts wow slideInRight" data-wow-duration="2s">
           
           <%=image_tag(@category.image)%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

   <% @categories.each do |category| %>
  <div class="col-md-4 col-sm-6 col-xs-12 " style="height: 500px; width: 500px; border-radius: 10px; border-bottom-color: #000; margin-left: 100px; ">
         <div class="single_special_img" style= "width: 100%">
            <%= link_to image_tag(recipe.image ,  class: "single_special_img" , style: "width: 100%"), recipe %>
              <h2 style="width: 450px; margin-top: 10px;"> <%= category.recipe.title %></h2><br>

              <% if recipe.user %>
              <h3 style="width: 450px; margin-top: 10px;"> Recipe by:</h3> <h4 style="width: 450px; margin-top: 10px;"><% recipe.user.id %></h4>
              <% end %>
        </div>
            
            <% if current_user && current_user.admin %>
              <%= link_to 'Edit', edit_recipe_path(recipe) , class: "btn" %>
              <%= link_to 'Destroy', recipe,class: "btn", method: :delete , data: {confirm: 'Are you sure you want to delete this recipe?'}%>
            <% end %>
    </div>

    <% end %>