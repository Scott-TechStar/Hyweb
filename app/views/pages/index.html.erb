
<%= render "pages/header" %>

<section id="features" class="features sections" >
  <div class="container">
    <div class="row">
      <div class="features_content text-center center ">
        <div class="col-md-4">
          <div class="sinle_features wow slideInUp" data-wow-duration="1s">

            <%= image_tag "icon1.png",:alt => "" %>

            <h5>Recipes </h5>
            <p>Get new recipes made using the Hystove and try them out yourself.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="sinle_features wow slideInUp" data-wow-duration="1.5s">
            <%= image_tag "icon_2.png", :alt => ""%>

            <h5>Tutorials</h5>
            <p>View video Tutorials on the go right here, and learn how to make your favorite dishes using hystove. </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="sinle_features wow slideInUp" data-wow-duration="2s">
            <%= image_tag "icon_3.png", :alt => ""%>
            <h5>Shopping</h5>
            <p>All this content doesnt make sense without a hystove so click on the navigation and get one today</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section><!-- End of Abouts Section -->





<section id="abouts" class="abouts sections">
  <div class="container">
    <div class="row">
      <div class="main_abouts">
        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_abouts wow slideInLeft" data-wow-duration="2s">
            <div class="head_title text-center">
              <h2>About us</h2>
              <div class="separetor"></div>
            </div>

            <p>We are a company committed to elevating your experience in the kitchen by making stoves and other kitchen appliances.</p>
            <div class="signature_img text-right">
              <%= image_tag "signature.png", :alt=> "" %>

            </div>
          </div>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_abouts wow slideInRight" data-wow-duration="2s">
            <%= image_tag "abimg.png", :alt => "" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section><!-- End of Abouts Section -->

<!-- footer Section -->

<footer id="footer" class="footer">
  <div class="container">
    <div class="row">

      <div class="col-sm-5 col-sm-offset-7 col-xs-10 col-xs-offset-2">
        <div class="contact_area wow slideInLeft" data-wow-duration="2s">
          <div class="head_title text-center">
            <h2>Contact</h2>
            <div class="separetor"></div>
          </div>

          <div class="main_contact_content">
            <div class="row">
              <div class="col-sm-6">
                <div class="single_contact text-left">
                  <h5>HYBRA</h5>
                  <span>Nairobi , Kenya</span>
                  <span></span>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="single_contact text-left">
                  <h5>Enquiries</h5>
                  <span>customercare@hybra.com</span>
                  <span>0713836206</span>
                </div>
              </div>
            </div>

            <div class="contact_form_area">
              <h3>Contact form</h3>
              <form action="#" id="formid">
                <div class="row">
                  <div class="col-sm-6 col-xs-6">
                    <div class="form-group">
                      <input type="text" class="form-control" name="name" placeholder="first name">
                    </div>
                  </div>

                  <div class="col-sm-6 col-xs-6">
                    <div class="form-group">
                      <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-12">
                    <div class="form-group">
                      <textarea class="form-control" name="message" rows="3" placeholder="Message"></textarea>
                    </div>


                  </div>

                  <div class="form_btn_area text-center">
                    <a href="" class="btn">Send</a>
                  </div>
                </div>
              </form>
            </div>

          </div>

        </div>
      </div>
    </div>


    <div class="row">
      <div class="copyright_text_area">
        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_footer text-right wow zoomIn" data-wow-duration="2s">
            <p>Made by Daniel Katungi @2019</p>
          </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <div class="single_footer text-right">

            <div class="footer_socail wow zoomIn" data-wow-duration="1.5s">
              <a href=""><i class="fa fa-facebook"></i></a>
              <a href=""><i class="fa fa-linkedin"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>



<!-- STRAT SCROLL TO TOP -->

<div class="scrollup">
  <a href="#"><i class="fa fa-chevron-up"></i></a>
</div>



<%= javascript_include_tag 'nivo-lightbox.min' %>
<%= javascript_include_tag 'owl.carousel.min' %>
<%= javascript_include_tag 'script' %>
<%= javascript_include_tag 'wow.min' %>
<%= javascript_include_tag 'jquery.easing.1.3' %>
<%= javascript_include_tag 'jquery.fancybox.pack' %>

</body>
</html>
