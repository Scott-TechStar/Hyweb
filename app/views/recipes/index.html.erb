<%= render "recipes/showheader" %>


<p id="notice"><%= notice %></p>


<h1 style="margin-left: 850px; margin-bottom: 10px; ">Recipes</h1>
<div class="separetor" style="margin-bottom: 20px"></div>

    <% @recipes.each do |recipe| %>
  <div class="col-md-4 col-sm-6 col-xs-12 " style="height: 500px; width: 500px; border-radius: 10px; border-bottom-color: #000; margin-left: 100px; ">
            <div class="single_special_img" style= "width: 100%">
            <%= link_to image_tag(recipe.image ,  class: "single_special_img" , style: "width: 100%"), recipe %>
              <h2 style="width: 450px; margin-top: 10px; "> <%= recipe.title %></h2>
            </div>

              <%= link_to 'Edit', edit_recipe_path(recipe) , class: "btn" %>
              <%= link_to 'Destroy', recipe,class: "btn", method: :delete , data: {confirm: 'Are you sure you want to delete this recipe?'}%>

    </div>

    <% end %>

<br>
